{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=11.7.0",
    "yarn": ">=1.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-jest": "^22.2.1",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.3"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap && lerna link --force-local",
    "db:start": "docker-compose up -d && ./scripts/wait-for-postgres.sh -c acnw-postgres",
    "db:import": "yarn db:start && lerna exec --scope server yarn db:import",
    "db:setup:production": "lerna exec --scope server yarn db:setup:production",
    "lint": "lerna exec --parallel yarn lint",
    "format": "prettier --no-color --write 'packages/*/{src,scripts,db}/**/*.{js,jsx,css,scss,json}'",
    "start": "lerna exec --parallel yarn start",
    "start:client": "yarn db:start && lerna exec --scope client yarn start",
    "start:production": "lerna exec --scope client yarn build && lerna exec --scope server yarn start:production",
    "start:server": "yarn db:start && lerna exec --scope server yarn start",
    "test": "yarn db:start && lerna exec -- yarn test",
    "test:client": "yarn db:start && lerna exec --scope client yarn test",
    "test:server": "yarn db:start && lerna exec --scope server yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --no-color --write",
      "yarn lint",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --no-color --write",
      "git add"
    ]
  },
  "resolutions": {
    "**/exec-sh/merge": "1.2.1"
  }
}
