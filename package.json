{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.8.0",
    "yarn": ">=1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-eslint": "^9.0.0",
    "circular-json": "^0.5.5",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.1",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna link --force-local",
    "db:import": "lerna exec --scope server yarn db:import",
    "db:setup:production": "lerna exec --scope server yarn db:setup:production",
    "lint": "lerna exec --parallel yarn lint",
    "format": "prettier --no-color --write 'packages/*/{src,script,db}/**/*.{js,jsx,css,scss,json}'",
    "start": "lerna exec --parallel yarn start",
    "start:client": "lerna exec --scope client yarn start",
    "start:production": "lerna exec --scope client yarn build && lerna exec --scope server yarn start:production",
    "start:server": "lerna exec --scope server yarn start",
    "test": "lerna exec -- yarn test",
    "test:client": "lerna exec --scope client yarn test",
    "test:server": "lerna exec --scope server yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --no-color --write",
      "yarn lint",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --no-color --write",
      "git add"
    ]

  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "jasmine": "true",
      "jest": "true"
    }
  }
}
