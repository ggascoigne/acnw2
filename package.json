{
  "name": "acnw2",
  "version": "0.1.0",
  "description": "AmberCon NW v2 site",
  "author": "guy@wyrdrune.com",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=11.7.0",
    "yarn": ">=1.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggascoigne/acnw2.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "apollo-link-http": "^1.5.14",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "execa": "^1.0.0",
    "graphql-tools": "^4.0.4",
    "husky": "^1.3.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "meow": "^5.0.0",
    "node-fetch": "^2.3.0",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "bootstrap": "yarn && yarn outdated ; yarn audit",
    "clean:install": "rm -rf node_modules packages/*/node_modules yarn.lock && yarn && yarn audit",
    "db:import": "yarn db:start && lerna exec --scope server yarn db:import",
    "db:setup:production": "lerna exec --scope server yarn db:setup:production",
    "db:start": "docker-compose up -d && ./scripts/wait-for-postgres.sh -c acnw-postgres",
    "format": "yarn format:sort-imports && yarn format:prettier",
    "format:prettier": "prettier --no-color --write 'packages/*/{src,scripts,db}/**/*.{js,jsx,ts,tsx,css,scss,json}'",
    "format:sort-imports": "import-sort --write 'packages/*/{src,scripts,db}/**/*.{js,jsx,ts,tsx}'",
    "lint": "lerna exec --parallel yarn lint",
    "start": "lerna exec --parallel yarn start",
    "start:ui": "yarn db:start && lerna exec --scope ui yarn start",
    "start:production": "lerna exec --scope ui yarn build && lerna exec --scope server yarn start:production",
    "start:server": "yarn db:start && lerna exec --scope server yarn start",
    "test": "yarn db:start && lerna exec --concurrency 1 -- yarn test",
    "test:ui": "yarn db:start && lerna exec --scope ui yarn test",
    "test:server": "yarn db:start && lerna exec --scope server yarn test",
    "saveSchema": "lerna exec --scope ui yarn saveSchema"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*/src/*.{js,jsx,ts,tsx}": [
      "import-sort --write",
      "prettier --no-color --write",
      "yarn lint",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --no-color --write",
      "git add"
    ]
  },
  "resolutions": {
  }
}
