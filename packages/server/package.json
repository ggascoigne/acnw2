  "scripts": {
    "db:clean": "./scripts/createCleanDb.js",
    "db:import": "./scripts/importV1ToLocal.js",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:migrate:run": "knex migrate:latest",
    "db:setup": "yarn db:clean && yarn db:migrate:run ",
    "db:setup:production": "NODE_ENV=production yarn db:clean && NODE_ENV=production yarn db:migrate:run ",
    "format": "prettier-standard '{src,scripts,db}/**/*.js'",
    "precommit": "lint-staged",
    "start": "nodemon index.js",
    "start:production": "NODE_ENV=production node index.js",
    "test": "NODE_ENV=test yarn db:setup && jest --runInBand"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "jasmine": "true",
      "jest": "true"
    }
  },
  "lint-staged": {
    "*.{js,css}": [
      "prettier-standard",
      "git add"
    ]
  }
}
